@model LoginOrRegisterModel

@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}
<!-- Bootstrap CSS and JS -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>



@if (ViewBag.OpenModal != null && ViewBag.OpenModal)
{
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal content goes here -->
                @Html.Partial("_MyModal")
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            // Trigger the modal when the page loads
            $('#myModal').modal('show');
        });
    </script>
}


<div class="container login-container" style="padding: 1rem; margin-top: 1rem;">
    <div class="login-bg-image"></div>
<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
            <button id="loginButton" class="mybtn btn-active">Login</button>
    </li>
    <li class="nav-item" role="presentation">
            <button id="registerButton" class="mybtn btn-inactive">Register</button>
    </li>
</ul>
    <div>
        <form id="loginForm" style="display: block" asp-controller="Account" asp-action="Login" method="post">
            <!-- LoginName input -->
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="loginNameOrMail"></label>
                <input type="text" asp-for="loginNameOrMail" class="form-control" />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="loginPassword"></label>
                <input type="password" asp-for="loginPassword" class="form-control" />
            </div>
            <button style="accent-color:center" type="submit" class="mybtn btn-active btn-block mb-3">Sign in</button>
        </form>
    </div>

        <form id="registerForm" style="display: none" asp-controller="Account" asp-action="Register" method="post" >
        <div class="row"> 
            <!-- FirstName input -->
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="RegisterFirstName"></label>
                <input type="text" asp-for="RegisterFirstName" class="form-control" />

            </div>

            <!-- LastName input -->
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="registerLastName"></label>
                <input type="text" asp-for="registerLastName" class="form-control" />

            </div>
        </div>
            
            <!-- Username input -->
            <div class="form-outline mb-4">
            <label class="form-label" asp-for="registerUsername"></label>
            <input type="text" asp-for="registerUsername" class="form-control" />
                
            </div>

            <!-- Email input -->
            <div class="form-outline mb-4">
            <label class="form-label" asp-for="registerEmail">Email</label>
            <input type="email" asp-for="registerEmail" class="form-control" />
                
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
            <label class="form-label" asp-for="registerPassword">Password</label>
            <input type="password" id = "pw1"asp-for="registerPassword" class="form-control"/>
                
            </div>

            <!-- Repeat Password input -->
            <div class="form-outline mb-4">
            <label class="form-label" asp-for="registerRepeatPassword">Repeat password</label>
            <input type="password" id = "pw2" asp-for="registerRepeatPassword" class="form-control" />
                
            </div>

            <button type="submit" id ="sumbitRegister"class="mybtn btn-active btn-block mb-3">Register</button>
        </form>

    </div>

<div class="nav-item">
    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Admin">Hardcoded Relink Admin</a>
</div>