@model LoginOrRegisterModel

@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}
<!-- JS -->

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>



<!-- registerfailed -->
@if (ViewBag.OpenModalRegisterFailed != null && ViewBag.OpenModalRegisterFailed)
{
    <div id="registerFailed" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal content goes here -->
                @Html.Partial("_RegisterFailedModal")
            </div>
        </div>
    </div>

    <script>

        $(document).ready(function () {
            $('#registerFailed').modal('show');
            // Close the modal when the button is clicked
            $('#closeModalBtn').click(function () {
                $('#registerFailed').modal('hide');
            });
        });
    </script>
}
<!-- loginfailed -->
@if (ViewBag.OpenModalLoginFailed != null && ViewBag.OpenModalLoginFailed)
{
    <div id="loginFailed" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <!-- Modal content goes here -->
                @Html.Partial("_LoginFailedModal")
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#loginFailed').modal('show');
            // Close the modal when the button is clicked
            $('#closeModalBtn').click(function () {
                $('#loginFailed').modal('hide');
            });
        });
    </script>
}


<div class="container login-container" style="padding: 1rem; margin-top: 1rem;">
    <div class="login-bg-image"></div>
<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
            <button id="loginButton" class="mybtn btn-active">Login</button>
    </li>
    <li class="nav-item" role="presentation">
            <button id="registerButton" class="mybtn btn-inactive">Register</button>
    </li>
</ul>
    <div>
        <form id="loginForm" style="display: block" asp-controller="Account" asp-action="Login" method="post">
            <!-- LoginName input -->
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="loginNameOrMail"></label>
                <input type="text" asp-for="loginNameOrMail" class="form-control" />
            </div>

            <!-- Password input -->
            <div class="form-outline mb-4">
                <label class="form-label" asp-for="loginPassword"></label>
                <input type="password" asp-for="loginPassword" class="form-control" />
            </div>
            <button style="accent-color:center" type="submit" class="mybtn btn-active btn-block mb-3">Sign in</button>
        </form>
    </div>

        <form id="registerForm" style="display: none" asp-controller="Account" asp-action="Register" method="post" >
        <div class="row"> 
            <!-- FirstName input -->
